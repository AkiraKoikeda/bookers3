<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'public/users/info', user: @user, book: @book %>
      <%= render 'public/books/form', book: @new_book %>
    </div>
    <div class="col-8">
      <h3>Book detail</h3>
      <table>
        <tr>
          <td></td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book)%></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "このコメントを削除しますか？" } %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
<% if users.count != 0 %>
  <table class ="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Books</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_image(70,70) %></td>
        <td><%= user.name %></td>
        <td>
          <% if user.signed_in? %>
            <%= link_to user_path(user.id) do %>
              <%= user.books.count %>件の投稿
            <% end %>
          <% else %>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.books.count %>件の投稿
            <% end %>
          <% end %>
          </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
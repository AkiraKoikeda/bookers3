<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <%= f.label :Name %>
        <%= f.text_field :name %>
        <%= f.label :Image %>

        <%= f.label :Introduction %>
        <%= f.text_area :introduction %>
        <%= f.submit %>
        <% end %>
    </div>
  </div>
</div>
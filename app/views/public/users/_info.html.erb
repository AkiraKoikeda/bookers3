
<div class="col-3">
  <h3>User info</h3>
  <table>
    <tr>
      <th><%= image_tag user.get_profile_image(100,100) %></th>
      <td></td>
    </tr>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.intro %></td>
    </tr>
  </table>
  <% if current_user == user %>
    <%= link_to 'edit', edit_user_path(user.id) %>
  <% end %>
</div>